<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/WhiteToDarkGrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <ImageView
            android:id="@+id/closeDialogBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:scaleType="fitCenter"
            android:padding="5dp"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/BlackToWhite"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="?attr/DarkGreyToLightGrey"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:id="@+id/editCons"
            android:visibility="gone">
            <ImageView
                android:id="@+id/editImg1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_edit"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:tint="?attr/BlackToWhite"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="수정"
                android:textColor="?attr/BlackToWhite"
                android:textSize="16dp"
                android:id="@+id/editTitle"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/editImg1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:id="@+id/reportCons">
            <ImageView
                android:id="@+id/reportImg1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_report_outline"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:tint="?attr/BlackToWhite" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="신고"
                android:textColor="?attr/BlackToWhite"
                android:textSize="16dp"
                android:id="@+id/reportTitle"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/reportImg1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:id="@+id/deleteCons"
            android:visibility="gone">
            <ImageView
                android:id="@+id/deleteImg1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:tint="?attr/BlackToWhite" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="삭제"
                android:textColor="?attr/BlackToWhite"
                android:textSize="16dp"
                android:id="@+id/deleteTitle"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/deleteImg1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>